<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#aa000000"
                android:visibility="visible"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:scaleType="center"
                android:src="@color/primary"/>
            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rlLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/activity_margin_small"
                    android:background="@drawable/login_logo_bg">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:padding="@dimen/activity_margin_small"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="visible"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/activity_margin_small"
                    android:text="LOGIN"
                    android:textColor="@color/text_color_white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </RelativeLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlHeader"
                android:layout_marginEnd="@dimen/activity_margin_small"
                android:layout_marginLeft="@dimen/activity_margin_small"
                android:layout_marginRight="@dimen/activity_margin_small"
                android:layout_marginStart="@dimen/activity_margin_small"
                app:tabIndicatorColor="@color/text_color_white"
                app:tabSelectedTextColor="@color/text_color_white"
                app:tabTextColor="@color/text_color_grey_light"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tabs"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
